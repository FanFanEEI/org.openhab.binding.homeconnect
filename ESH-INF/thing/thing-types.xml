    <channel-type id="remotecontrolactivation">
        <item-type>Switch</item-type>
        <label>Remotecontroll enabled?</label>
        <description>This status indicates whether the allowance for remote controlling is enabled.
        </description>
        <state readOnly="true" />
    </channel-type>
    
    <channel-type id="remotestartallowance">
        <item-type>Switch</item-type>
        <label>Remotestart allowed?</label>
        <description>This status indicates whether the remote program start is enabled. This can happen due to a programmatic change (only disabling), or manually by the user changing the flag locally on the home appliance, or automatically after a certain duration - usually 24 hours.
        </description>
        <state readOnly="true" />
    </channel-type>
    
    <channel-type id="status_localcontrol">
        <item-type>Switch</item-type>
        <label>Actual manually controlled?</label>
        <description>This status indicates whether the home appliance is currently manually controlled by the user operating the home appliance, e.g. opening the door or pressing a button. After a few seconds without user intervention this flag is reverted and an appropriate event is sent.
        </description>
        <state readOnly="true" />
    </channel-type>
    
    <channel-type id="operationstate">
        <item-type>String</item-type>
        <label>Operation State</label>
        <description>This status describes the operation state of the home appliance.
        </description>
        <state readOnly="true" />
    </channel-type>
    
    <channel-type id="doorstate">
        <item-type>Contact</item-type>
        <label>Door State</label>
        <description>This status describes the state of the door of the home appliance. A change of that status is either triggered by the user operating the home appliance locally (i.e. opening/closing door) or automatically by the home appliance (i.e. locking the door).
        </description>
        <state readOnly="true" />
    </channel-type>
    
    <channel-type id="currcavtempstate">
        <item-type>String</item-type>
        <label>Current cavity temperature</label>
        <description>This status describes the current temperature in the cavity.
        </description>
        <state readOnly="true" />
    </channel-type>
    
    <channel-type id="powerstate">
        <item-type>Switch</item-type>
        <label>Power State</label>
        <description>This switch describes the power state.
        </description>
        <state readOnly="true" />
    </channel-type>
